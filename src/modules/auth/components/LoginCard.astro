---
import Input from "@common/components/Input.astro";
import Button from "@common/components/Button.astro";
---

<div class="mx-auto mt-10 shadow-xl max-w-72 p-4 flex flex-col gap-4">
  <div>
    <div class="imagen bg-lime-500 h-48"></div>
  </div>
  <form action="/login" method="post" class="flex flex-col gap-4">
    <div class="gap-2">
      <div class="">
        <label class="text-sm" for="identifier">Username or Email</label>
        <Input type="text" name="identifier" />
      </div>

      <div class="">
        <label class="text-sm" for="password">Password</label>
        <Input type="password" name="password" />
      </div>
    </div>
    <Button type="submit">Login</Button>
  </form>
</div>
