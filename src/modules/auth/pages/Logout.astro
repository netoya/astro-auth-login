---
import MainLayout from "@modules/common/layouts/MainLayout.astro";
import { AuthController } from "../handlers/AuthController";

const auth = new AuthController(Astro);

await auth.logout();
---

<MainLayout>
  <script>
    // replace history state to prevent back button
    history.replaceState({}, "", "/");
    // redirect to home page
    window.location.href = "/";
  </script>
</MainLayout>
